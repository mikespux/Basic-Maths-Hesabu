<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cell_cyan"
        android:paddingTop="@dimen/dp_5"
        android:gravity="center"
        android:theme="@style/ToolbarStyle">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/myriadpro_semibold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />





    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layout_cell"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/cell_cyan" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_8">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_question_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/cyanColorPrimaryDark" />


                            <TextView
                                android:id="@+id/tv_total_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/cyanColorPrimaryDark" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/right" />

                            <TextView
                                android:id="@+id/tv_right_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:gravity="start|center_vertical"
                                android:text="@string/_0"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/wrong" />

                            <TextView
                                android:id="@+id/tv_wrong_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:gravity="start|center_vertical"
                                android:text="@string/_0"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />

                        </LinearLayout>


                    </LinearLayout>


                </FrameLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_daily_quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quiz_size"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btn_op_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />

                <TextView
                    android:id="@+id/btn_op_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quiz_size"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btn_op_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />


                <TextView
                    android:id="@+id/btn_op_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/txt_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fraction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1_fraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/daily_test_line"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/fraction_txt_size" />

                <TextView
                    android:id="@+id/text_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/fraction_txt_size" />


                <TextView
                    android:id="@+id/tv2_fraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/daily_test_line"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/cyanColorPrimaryDark"
                    android:textSize="@dimen/fraction_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quiz_size"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg">

                    <TextView
                        android:id="@+id/btn_op_1_fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/daily_test_line"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/cyanColorPrimaryDark"
                        android:textSize="@dimen/fraction_txt_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg">

                    <TextView
                        android:id="@+id/btn_op_2_fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/daily_test_line"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/cyanColorPrimaryDark"
                        android:textSize="@dimen/fraction_txt_size" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/quiz_size"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/view_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg">

                    <TextView
                        android:id="@+id/btn_op_3_fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/daily_test_line"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/cyanColorPrimaryDark"
                        android:textSize="@dimen/fraction_txt_size" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/view_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_bg">

                    <TextView
                        android:id="@+id/btn_op_4_fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/daily_test_line"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/cyanColorPrimaryDark"
                        android:textSize="@dimen/fraction_txt_size" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>


</LinearLayout>